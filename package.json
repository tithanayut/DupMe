{
  "name": "dupme",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -c auto --names CLIENT,SERVER npm:dev:frontend npm:dev:backend",
    "dev:frontend": "vite build --watch",
    "dev:backend": "nodemon --watch ./src/server --exec node ./src/server/server.js",
    "start": "node ./src/server/server.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  }
}
